{
    "env": {
        "es6": true,
        "node": true
    },
    "parserOptions": {
      "ecmaVersion": 2017,
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true
      }
    },
    "rules": {
        "indent": [
            "warn",
            2,
            {
              "SwitchCase": 1
            }
        ],
        "no-mixed-spaces-and-tabs": [
          "warn",
          "smart-tabs"
        ],
        "linebreak-style": [
            "warn",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-unused-vars": [
          "warn",
          "local"
        ],
        "no-undef": [
          "error"
        ]
    }
}
